        <Button x:Name="addBtn" Content="Add" HorizontalAlignment="Left" Margin="179,159,0,0" VerticalAlignment="Top" Width="135" Height="36" Click="addBtn_Click"/>
        <Button x:Name="removeBtn" Content="Remove" HorizontalAlignment="Left" Margin="346,159,0,0" VerticalAlignment="Top" Width="135" Height="36" Click="removeBtn_Click"/>
        <TextBox x:Name="numberTxtBox" HorizontalAlignment="Left" Height="45" Margin="230,79,0,0" TextWrapping="Wrap" Text="AddNumber" VerticalAlignment="Top" Width="375"/>
        <Button x:Name="showAllBtn" Content="Show All" HorizontalAlignment="Left" Height="36" Margin="536,159,0,0" VerticalAlignment="Top" Width="113" Click="showAllBtn_Click"/>

    </Grid>
</Window>
